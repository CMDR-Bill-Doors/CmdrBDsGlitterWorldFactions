<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Bill Doors' Combat Enhancers</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>
            /Defs/PawnKindDef[@Name="Pawn_3HSTSlaveBase"]
          </xpath>
          <value>
            <inventoryOptions>
              <subOptionsChooseOne>
                <li>
                  <thingDef>Drug_Courage</thingDef>
                  <countRange>1~2</countRange>
                </li>
              </subOptionsChooseOne>
            </inventoryOptions>
          </value>
        </li>
      </operations>
    </match>
  </Operation>


  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Furniture Expanded - Production</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>
            /Defs/ThingDef[@Name="70mmLGISBase"]/tradeTags
          </xpath>
          <value>
            <li>CE_AutoEnableCrafting_VFE_TableMachiningLarge</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>